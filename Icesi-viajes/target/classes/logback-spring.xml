<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <!-- Añadir un appender específico para la clase TestUsuario -->
    <appender name="TEST_USUARIO_FILE" class="ch.qos.logback.core.FileAppender">
        <file>/ruta/de/tu/archivo/de/logs-test-usuario.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Configurar el nivel de log específico para la clase TestUsuario -->
    <logger name="co.edu.icesi.viajes.service.TestUsuario" level="INFO">
        <appender-ref ref="TEST_USUARIO_FILE"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <!-- Asegúrate de agregar cualquier otro appender general aquí -->
    </root>
</configuration>
